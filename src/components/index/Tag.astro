                    start: "bottom bottom",
                    end: "+=250%",
                    scrub: 0.6,
                    onLeave: (self) => {
                        finished = true;
                        brush.setAttribute("stroke-dasharray", String(L));
                        brush.setAttribute("stroke-dashoffset", "0");
                        self.kill();
                    },
                },
            });

            tl.to(
                s,
                {
                    t: L,
                    duration: 1,
                    ease: "power1.out",
                    onUpdate() {
                        if (finished) return;
                        const progress = Math.max(0, Math.min(1, s.t / L));
                        const len = progress * L;
                        const nearEnd = len >= L - EPS;
                        const offset = nearEnd ? 0 : L - len;
                        brush.setAttribute("stroke-dasharray", String(L));
                        brush.setAttribute("stroke-dashoffset", String(offset));

                        // Congelar al completar
                        if (nearEnd && !finished) {
                            finished = true;
                            brush.setAttribute("stroke-dasharray", String(L));
                            brush.setAttribute("stroke-dashoffset", "0");
                            if (tl.scrollTrigger) tl.scrollTrigger.kill();
                            tl.kill();
                            return;
                        }
                    },
                },
                0
            );

            // Estado final estable
            tl.eventCallback("onComplete", () => {
                brush.setAttribute("stroke-dasharray", String(L));
                brush.setAttribute("stroke-dashoffset", "0");
                finished = true;
                if (tl.scrollTrigger) tl.scrollTrigger.kill();
                tl.kill();
            });
        }

        if (document.readyState === "loading") {
            document.addEventListener("DOMContentLoaded", start, { once: true });
        } else {
            start();
        }
    </script>
