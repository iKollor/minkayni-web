                        blanditiis mayores!
                    </span>
                </div>
            </div>
        </section>
    </section>

    <section class="w-screen flex flex-col mt-30 items-center mb-20 h-fit">
        <section
            class="flex flex-col md:flex-row w-full md:w-[90%] px-4 md:px-15 items-center gap-10"
        >
            <!-- Contenedor de imagen con máscara -->
            <div
                class="w-full md:w-1/2 min-h-[25vw] flex justify-center items-center relative"
            >
                <!-- Flor de fondo superior derecha -->
                <div
                    class="absolute top-0 right-5 w-24 h-24 sm:w-32 sm:h-32 md:w-40 md:h-40 lg:w-50 lg:h-50 z-0"
                >
                    <Image
                        src={flor}
                        alt="flor"
                        class="object-cover w-full h-full"
                    />
                </div>

                <!-- Flor de fondo borde izquierdo -->
                <div
                    class="absolute bottom-0 left-8 w-24 h-24 sm:w-32 sm:h-32 md:w-40 md:h-40 lg:w-50 lg:h-50 z-0"
                >
                    <Image
                        src={flor}
                        alt="flor"
                        class="object-cover w-full h-full"
                    />
                </div>

                <!-- Mascara principal siempre encima -->
                <MaskFlor
                    src={foto}
                    alt="Flor 1"
                    className="w-56 h-56 sm:w-64 sm:h-64 md:w-96 md:h-96 lg:w-120 lg:h-120 shadow-lg z-10"
                />
            </div>

            <!-- Contenido textual -->
            <div class="flex-1 flex flex-col p-4 md:p-10 min-h-[25vw] gap-10">
