            </div>
        </div>
    </section>

    <section class="w-screen h-fit flex flex-col">
        <section class="flex flex-row w-full px-4 md:px-15 items-center">
            <div class="flex flex-col md:flex-row w-full gap-4 relative">
                <!-- Misión -->
                <div
                    class="flex flex-col gap-5 w-full md:w-1/2 p-10 items-center rounded-l-3xl min-h-[25vw]"
                    style="color: var(--bg-white); background-color: var(--bg-indigo-bright); z-index: 10;"
                >
                    <h1 class="text-3xl pl-2">Misión</h1>
                    <span>
